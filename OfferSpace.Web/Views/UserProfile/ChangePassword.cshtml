@model OfferSpace.Web.Models.ChangePasswordViewModel

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

  <link rel="shortcut icon" href="../../Images/offer-space-icon.ico" type="image/x-icon">
  <link rel="icon" href="../../Images/offer-space-icon.ico" type="image/x-icon">

  <title>OfferSpace - Editing Account</title>

  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
  <meta name="viewport" content="width=device-width" />

  <!--     Fonts and icons     -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

  <!-- CSS Files -->
  <link href="../../Content/bootstrap.min.css" rel="stylesheet" />
  <link href="../../Content/CreatingStepper/material-bootstrap-wizard.css" rel="stylesheet" />

  <!-- CSS Just for demo purpose, don't include it in your project -->
  @*<link href="../../Content/CreatingStepper/demo.css" rel="stylesheet" />*@


</head>

<body>

  <div class="image-container set-full-height" style="background-image: url('../../Images/StepperIMG/wizard-profile.jpg')">

    <!--   Big container   -->
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <!--      Wizard container        -->
          <div class="wizard-container">
            <div class="card wizard-card" data-color="green" id="wizardProfile">

              @using (Html.BeginForm("ChangePassword", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
              {
                @Html.AntiForgeryToken()
                <!--        You can switch " data-color="purple" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->

                <div class="wizard-header">
                  <h3 class="wizard-title">
                   Change Password
                  </h3>
                  
                </div>
                <div class="wizard-navigation">
                  <ul>
                    <li><a href="#about" data-toggle="tab">Account</a></li>
                   
                  </ul>
                </div>

                <div class="tab-content">
                  <div class="tab-pane" id="about">
                    <div class="row">
                      <h4 class="info-text"> Here you can your password</h4>
                      <div class="col-sm-4 col-sm-offset-1">

                        <div class="picture-container">
                          <div class="picture">
                            <img src="@Url.Content("~/Images/offer-space-icon.ico")" class="picture-src" id="wizardPicturePreview" title="" />
                           
                          </div>
                          
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="material-icons">record_voice_over</i>
                          </span>
                          <div class="form-group label-floating">
                            <label class="control-label">Old Password <small>(required)</small></label>
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                          </div>
                        </div>

                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="material-icons">record_voice_over</i>
                          </span>
                          <div class="form-group label-floating">
                            <label class="control-label">NewPassword <small>(required)</small></label>
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                          </div>
                        </div>

                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="material-icons">record_voice_over</i>
                          </span>
                          <div class="form-group label-floating">
                            <label class="control-label">Confirm Password <small>(required)</small></label>
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                          </div>
                        </div>




                      </div>
                    </div>
                  </div>
                  <div class="tab-pane" id="account">
                    <div class="row">
                      <h4 class="info-text"> Create your own Company</h4>
                      <div class="col-sm-4 col-sm-offset-1">
                        <div class="picture-container">
                          <div class="picture">
                            <img src="../../Images/StepperIMG/default-logo.png" class="picture-src" id="wizardPicturePreview" title="" />
                            <input type="file" id="wizard-picture">
                          </div>
                          <h6>Choose Picture</h6>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
                <div class="wizard-footer">
                  <div class="pull-right">
                    <input type='button' class='btn btn-next btn-fill btn-success btn-wd' name='next' value='Next' />

                    <input type="submit" class="btn btn-finish btn-fill btn-success btn-w" name='finish' value="Done" />
                  </div>

                  <div class="pull-left">
                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                  </div>
                  <div class="clearfix"></div>
                </div>}

            </div>
          </div> <!-- wizard container -->
        </div>
      </div><!-- end row -->
    </div>


    <!--  big container -->
  </div>

  @*@Scripts.Render("~/bundles/CreatingSteper/js");*@
  <!--   Core JS Files   -->
  <script src="../../Scripts/CreatingSteper/jquery-2.2.4.min.js" type="text/javascript"></script>
  <script src="../../Scripts/bootstrap.min.js" type="text/javascript"></script>
  <script src="../../Scripts/CreatingSteper/jquery.bootstrap.js" type="text/javascript"></script>

  <!--  Plugin for the Wizard -->
  <script src="../../Scripts/CreatingSteper/material-bootstrap-wizard.js"></script>

  <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
  <script src="../../Scripts/CreatingSteper/jquery.validate.min.js"></script>

</body>


</html>


